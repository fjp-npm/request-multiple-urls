{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "**/lib/*",
    "**/__mocks__/*",
    "**/__tests__/*"
  ],
  "include": [
    "src"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "readme": "./README.md"
  }
}
